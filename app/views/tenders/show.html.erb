
<div class="container">

  <section class="tender">
    <div class="bar-info">
      <div class="bar-info__img">
        <img src="/assets/Slug-and-Lettuce.jpeg" alt="">
      </div>
      <div class="bar-info__text">
        <h1>Slug & Lettuce</h1>
        <p>Chain Bars</p>
        <p>Location: London</p>
        <p>Venues: 10</p>
      </div>
    </div>

    <div class="tender-bid">
      <div>
        <h1><%= @tender.description %></h1>
      </div>
      <div class="bid-start">
        <p>Min Bid</p>
        <h1>£4000</h1>
      </div>
      <div class="bid-current">
        <div class="bid-start">
          <p>Current Bid</p>
          <h1>£4000</h1>
        </div>
        <form>
          <div class="form-group">
            <label for="formGroupExampleInput">Your Bid</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter max bid">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Incentives</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Any bonuses">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="bid-submit">

      </div>

    </div>


  </section>


</div>
